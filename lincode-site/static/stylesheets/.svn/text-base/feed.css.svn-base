/*------------------------------------------------------------------------------------------------*/
/* Planet AFCP layout                                                                             */
/*------------------------------------------------------------------------------------------------*/

#planet-header {
  margin: 10px 0 10px 0;
  padding: 10px;
  background-color: #EEEEEE;
  border-width: 1px 0 1px 0;
  border-style: solid;
  border-color: #DDDDDD;
}

#planet-header p {
  margin: 0;
  padding: 0 0 4px 0;
  font: italic normal 100% 'Trebuchet MS',arial,sans-serif;
  line-height: 1.4em;
}

#planet-content #left-column {
  margin: 0;
  padding: 0;
  display: inline;
  float: left;
  width: 360px;
}

#planet-content #right-column {
  margin: 0;
  padding: 0;
  display: inline;
  float: right;
  width: 240px;
}

/*------------------------------------------------------------------------------------------------*/
/* Planet AFCP styles                                                                             */
/*------------------------------------------------------------------------------------------------*/

.section {
  margin: 0;
  padding: 0 0 8px 0;
}

.section h3 {
  margin: 0 0 8px 0;
  padding: 4px 0 4px 0;
  font: normal bold 140% 'Trebuchet MS',arial,sans-serif;
  line-height: 1.4em;
  border-bottom: 1px solid #888888;
}

.section  a img {
    border-width:0;
    border:1px solid #BBBBBB;
    margin:4px;
    padding:4px;
}

.section .entry {
  margin: 0;
  padding: 0 0 8px 0;
}


.section .entry .entry-title {
  margin: 0;
  padding: 0 0 2px 0;
  font: normal bold 110% 'Trebuchet MS',arial,sans-serif;
  line-height: 1.4em;
}

.section .entry .entry-info {
  margin: 0;
  padding: 0 0 2px 0;
  font: normal normal 90% 'Trebuchet MS',arial,sans-serif;
  color: #888888;
  line-height: 1.4em;
}

.section .entry .entry-content {
  margin: 0;
  padding: 0 0 2px 0;
  font: normal normal 100% arial,sans-serif;
  line-height: 1.4em;
}



.section .section-footer {
  margin: 0;
  padding: 2px;
  font: normal normal 90% 'Trebuchet MS',arial,sans-serif;
  text-align: right;
  border-top: 1px solid #DDDDDD;
}

